{
  "name": "belajar-nodejs__unit-test",
  "version": "1.0.0",
  "description": "Belajar NodeJS Unit Test",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "maxConcurrency": 3,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!vendor/**/*.{js,jsx}"
    ]
  },
  "type": "module",
  "author": "Narendra Febriliansyah R",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.8",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
}
